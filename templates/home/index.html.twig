{% extends 'base.html.twig' %}

{% block title %}Liste des articles
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1 class="text-center">Liste des articles</h1>
        </div>
        <div class="row">
            {% for article in articles %}
                <div class="card col-md-3 m-4">
      <img width="100%" src="{{asset('images/article.jpg')}}" alt="{{article.title}}"/>                    
      <div class="card-body">
                        <p class="date">Ecrit le
                            {{article.createdAt | date("d/m/Y")}}
                            Ã 
                            {{article.createdAt | date("H:i")}}
                            <br/>
                        </p>
                        <h5 class="card-title">{{article.title}}</h5>
                        <p class="card-text">{{article.content | slice(0, 50)}} ...</p>
                        Par {{article.author}}
                        <a href="{{path('show', {id : article.id})}}" class="btn btn-primary">Lire >></a>                    
                        </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}